@model IEnumerable<HI_LAB1.Models.Student>

@{ 
    Layout = "_Layout";
}

<!DOCTTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <title>Student List</title>
</head>
<body>
    <h3>Here is the list of students enrolled</h3>
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Student Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (HI_LAB1.Models.Student st in Model)
            {
            <tr>
                <td>@st.FirstName</td>
                <td>@st.LastName</td>
                <td>@st.StudentNumber</td>
            </tr>
            }
        </tbody>
    </table>
</body>
<a href="../Home/Index">Home Page</a>
</html>
</!DOCTTYPE>